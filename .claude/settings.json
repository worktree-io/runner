{
  "permissions": {
    "allow": [
      "Bash(centy create issue:*)",
      "Bash(uuidgen:*)",
      "Bash(npx centy:*)",
      "Bash(pnpm dlx centy:*)",
      "Bash(centy:*)",
      "Bash(npm run build:*)",
      "Bash(gh issue list:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(centy create issue:*)",
      "Bash(source:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(git tag:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm dlx block-no-verify"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm dlx ai-fs-permissions --op read"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm dlx ai-fs-permissions --op write"
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "pnpm dlx ai-fs-permissions --op write"
          }
        ]
      }
    ]
  }
}
